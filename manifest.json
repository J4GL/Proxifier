{
  "manifest_version": 3,
  "name": "Proxifier",
  "version": "1.6",
  "description": "Force proxy usage for specified websites",
  "permissions": [
    "proxy",
    "storage",
    "activeTab",
    "tabs",
    "declarativeNetRequest"
  ],
  "host_permissions": [
    "https://api.ipify.org/*",
    "*://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "action": {
    "default_title": "Proxifier - Click to toggle proxy for this website",
    "default_icon": {
      "16": "icons/proxy_off_16.png",
      "48": "icons/proxy_off_48.png",
      "128": "icons/proxy_off_128.png"
    }
  },
  "icons": {
    "16": "icons/proxy_off_16.png",
    "48": "icons/proxy_off_48.png",
    "128": "icons/proxy_off_128.png"
  }
}